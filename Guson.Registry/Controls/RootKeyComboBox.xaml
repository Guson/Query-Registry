<UserControl x:Class="Guson.Registry.Controls.RootKeyComboBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             mc:Ignorable="d" 
             d:DesignHeight="24" d:DesignWidth="60">
    <UserControl.Resources>
        <ObjectDataProvider x:Key="OpenKey.RootKeyType" MethodName="GetNames" ObjectType="{x:Type sys:Enum}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="VerticalAlignment" />
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>
    </UserControl.Resources>
    <Grid>
        <ComboBox x:Name="rootKeys" Width="60" ItemsSource="{Binding Source={StaticResource OpenKey.RootKeyType}}"/>
    </Grid>
</UserControl>
